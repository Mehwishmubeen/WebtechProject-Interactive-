<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin – Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .orders-table td, .orders-table th { vertical-align: middle; }
    .order-items { font-size: 0.9rem; color: #555; }
  </style>
  </head>
<body>
  <%- include('partials/header') %>
  <div class="container my-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h2 class="mb-0">Orders (Admin)</h2>
      <div>
        <a href="/admin/logout" class="btn btn-outline-danger btn-sm me-2">Logout</a>
        <a href="/" class="btn btn-outline-secondary btn-sm">Home</a>
      </div>
    </div>

    <% if (!orders || !orders.length) { %>
      <div class="alert alert-info">No orders found.</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-bordered table-striped orders-table">
          <thead class="table-light">
            <tr>
              <th>Order ID</th>
              <th>Customer</th>
              <th>Email</th>
              <th>Status</th>
              <th>Total</th>
              <th>Created</th>
              <th>Items</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(o => { %>
              <tr data-order-id="<%= o._id %>">
                <td><code><%= o._id %></code></td>
                <td><%= o.customerName %></td>
                <td><%= o.email %></td>
                <td><span class="badge bg-secondary js-status"><%= o.status %></span></td>
                <td>$<%= Number(o.totalAmount || 0).toFixed(2) %></td>
                <td><%= new Date(o.createdAt).toLocaleString() %></td>
                <td class="order-items">
                  <% (o.items || []).forEach(it => { %>
                    <div>
                      <strong><%= it.name %></strong> — <%= it.quantity %> × $<%= Number(it.price || 0).toFixed(2) %>
                    </div>
                  <% }) %>
                </td>
                <td>
                  <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-success js-confirm">Confirm</button>
                    <button type="button" class="btn btn-danger js-cancel">Cancel</button>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
  <%- include('partials/footer') %>
  <script>
    (function(){
      const ADMIN_EMAIL = 'admin@shop.com';
      async function updateStatus(orderId, status){
        try {
          const resp = await fetch(`/admin/orders/${orderId}/status`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email: ADMIN_EMAIL, status })
          });
          const data = await resp.json();
          if(!resp.ok || !data?.ok){
            alert(data?.error || 'Failed to update status');
            return;
          }
          const row = document.querySelector(`tr[data-order-id='${orderId}']`);
          if(row){
            const badge = row.querySelector('.js-status');
            if(badge) badge.textContent = status;
          }
        } catch(err){
          alert('Unexpected error: ' + err.message);
        }
      }
      document.addEventListener('click', (e)=>{
        const confirmBtn = e.target.closest('.js-confirm');
        const cancelBtn = e.target.closest('.js-cancel');
        if(!confirmBtn && !cancelBtn) return;
        const row = e.target.closest('tr[data-order-id]');
        if(!row) return;
        const orderId = row.getAttribute('data-order-id');
        const status = confirmBtn ? 'Confirmed' : 'Cancelled';
        updateStatus(orderId, status);
      });
    })();
  </script>
</body>
</html>
