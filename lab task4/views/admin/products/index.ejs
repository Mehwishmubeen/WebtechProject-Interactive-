<div class="page-actions">
  <a class="button button--primary" href="/admin/products/new">Add Product</a>
</div>

<% if (products.length === 0) { %>
  <p>No products found. Start by <a href="/admin/products/new">creating one</a>.</p>
<% } else { %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Price (â‚¹)</th>
        <th>Stock</th>
        <th>Updated</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach((product) => { %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.category %></td>
          <td><%= product.price.toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) %></td>
          <td><%= product.stock %></td>
          <td><%= product.updatedAt.toLocaleDateString() %></td>
          <td class="table__actions">
            <a class="button button--small" href="/admin/products/<%= product._id %>/edit">Edit</a>
            <form action="/admin/products/<%= product._id %>?_method=DELETE" method="POST">
              <button class="button button--danger button--small" type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } %>
