<section class="dashboard">
  <div class="dashboard__metrics">
    <article class="metric-card">
      <h2>Total Products</h2>
      <p><%= metrics.productCount %></p>
    </article>
    <article class="metric-card metric-card--warning">
      <h2>Low Stock (&lt;5)</h2>
      <p><%= metrics.lowStockCount %></p>
    </article>
  </div>

  <section class="dashboard__latest">
    <div class="dashboard__header">
      <h2>Latest Products</h2>
      <a class="button" href="/admin/products">View all</a>
    </div>
    <% if (latestProducts.length === 0) { %>
      <p>No products yet. <a href="/admin/products/new">Add one now.</a></p>
    <% } else { %>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Added</th>
          </tr>
        </thead>
        <tbody>
          <% latestProducts.forEach((product) => { %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.category %></td>
              <td>$<%= product.price.toFixed(2) %></td>
              <td><%= product.stock %></td>
              <td><%= product.createdAt.toLocaleDateString() %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </section>
</section>
